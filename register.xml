<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    android:id="@+id/reister"
    android:backgroundTint="#fffff2fe"
    android:backgroundTintMode="multiply"
    android:baselineAligned="false">
    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp">
        <TextView
            android:id="@+id/r_theme"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:text="开始你的旅途"
            android:gravity="center"
            style="@style/themeText"
            />
        <TextView
            android:id="@+id/r_user_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/r_theme"
            android:text="@string/username"
            style="@style/normalText"
            />
        <EditText
            android:id="@+id/r_username_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/r_user_input"
            android:hint="请输入账号"
            style="@style/inputText"
            />
        <TextView
            android:id="@+id/r_password_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/r_username_edit"
            android:layout_marginTop="3dp"
            android:text="@string/password"
            style="@style/normalText"/>
        <EditText
            android:id="@+id/r_password_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/r_password_input"
            android:singleLine="true"
            android:inputType="textPassword"
            android:hint="请输入密码"
            style="@style/inputText"
            />
        <TextView
            android:id="@+id/r_password_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/r_password_edit"
            android:layout_marginTop="3dp"
            android:text="确认密码"
            style="@style/normalText"/>
        <EditText
            android:id="@+id/r_password_edit_confirm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/r_password_confirm"
            android:singleLine="true"
            android:inputType="textPassword"
            android:hint="请输入密码"
            style="@style/inputText"
            />
        <TextView
            android:id="@+id/r_telephone_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/r_password_edit_confirm"
            android:layout_marginTop="3dp"
            android:text="手机号码"
            style="@style/normalText"/>
        <EditText
            android:id="@+id/r_telephone_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/r_telephone_input"
            android:singleLine="true"
            android:inputType="textPassword"
            android:hint="请输入手机号码"
            style="@style/inputText"
            />
        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/signin_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/r_telephone_edit"
            android:layout_centerHorizontal="true"
            android:text="@string/submit"
            android:textSize="22dp"
            android:background="@drawable/shape"
            android:textColor="#ffffffff"
            android:clickable="true"
            android:onClick="submit"
            android:enabled="true" />

    </RelativeLayout>
</RelativeLayout>
