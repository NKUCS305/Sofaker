<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <TableRow
            android:id="@+id/info_photo_row"
            android:layout_gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"

            >
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/photo"
                style="@style/infoText"
                />
            <ImageView
                android:id="@+id/info_photo"
                android:layout_gravity="right"
                android:paddingLeft="190dp"
                android:paddingRight="5dp"
                android:src="@drawable/headphoto"
                android:onClick="photoEdit"
                android:clickable="true"
                />
        </TableRow>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ff9e9e9e"
            />
        <TableRow
            android:id="@+id/info_nickname_row"
            android:layout_gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"

            >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/nickname"
                style="@style/infoText"
                />
            <EditText
                android:id="@+id/info_nickname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Tony_TJ"
                style="@style/infoText"
                android:gravity="right"
                android:paddingRight="20dp"
                android:paddingLeft="10dp"
                />
        </TableRow>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ff9e9e9e"
            />
        <TableRow
            android:id="@+id/info_realname_row"
            android:layout_gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"

            >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/realname"
                style="@style/infoText"
                />
            <EditText
                android:id="@+id/info_realname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="彭欣亮"
                style="@style/infoText"
                android:gravity="right"
                android:paddingRight="20dp"
                android:paddingLeft="10dp"
                />
        </TableRow>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ff9e9e9e"
            />
        <TableRow
            android:id="@+id/info_address_row"
            android:layout_gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/address"
                style="@style/infoText"
                />
            <EditText
                android:id="@+id/info_address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="天津市南开大学"
                style="@style/infoText"
                android:gravity="right"
                android:paddingRight="20dp"
                android:paddingLeft="10dp"
                />
        </TableRow>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ff9e9e9e"
            />
        <TableRow
            android:id="@+id/info_grade_row"
            android:layout_gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/grade"
                style="@style/infoText"
                />
            <EditText
                android:id="@+id/info_grade"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="1级"
                style="@style/infoText"
                android:gravity="right"
                android:paddingRight="20dp"
                android:paddingLeft="10dp"
                />
        </TableRow>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ff9e9e9e"
            />
        <TableRow
            android:id="@+id/info_telephone_row"
            android:layout_gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/telephone"
                style="@style/infoText"
                />
            <EditText
                android:id="@+id/info_telephone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="15202275053"
                style="@style/infoText"
                android:gravity="right"
                android:paddingRight="20dp"
                android:paddingLeft="10dp"
                />
        </TableRow>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ff9e9e9e"
            />
        <TableRow
            android:id="@+id/info_tag_row"
            android:layout_gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/tag"
                style="@style/infoText"

                />
            <EditText
                android:id="@+id/info_tag"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="学生/90后"
                style="@style/infoText"
                android:gravity="right"
                android:paddingRight="20dp"
                android:paddingLeft="10dp"
                />
        </TableRow>
        </TableLayout>

</LinearLayout>
