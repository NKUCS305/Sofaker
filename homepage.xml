<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyActivity"
    android:orientation="vertical"
    android:id="@+id/mainframe"
    >

    <include layout="@layout/mainhead"
        android:id="@+id/main_head"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/imagebutton"
        android:background="#FFDC64"
        android:padding="0dp"
        >
        <ImageButton
            android:id="@+id/main_world"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/button_1"
            android:background="#00000000"
            />
        <ImageButton
            android:id="@+id/main_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/button_2"
            android:background="#00000000"
            />
        <ImageButton
            android:id="@+id/main_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/button_3"
            android:background="#00000000"
            />
        <ImageButton
            android:id="@+id/main_footprint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/button_4"
            android:background="#00000000"
            />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/main_head"
        android:layout_above="@id/imagebutton"
        android:id="@+id/id_viewpager">

    </android.support.v4.view.ViewPager>
</RelativeLayout>
